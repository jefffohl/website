{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "allowJs": true,
        "noEmit": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*", "./*"]
        },
        "rootDir": ".",
        "outDir": "./.next"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "out/types/**/*.ts"
    ],
    "exclude": ["node_modules", "../backend/**/*"]
}
